{
  "language": {
    "korean": {
      "corpus": {
        "train": "corpus/VictorNLP_kor(KAISTre_KMDP)_ds.json",
        "train_dev_ratio": 0.9, 
        "test": "corpus/VictorNLP_kor(KAISTre_KMDP)_golden.json",
        "labels": "corpus/VictorNLP_kor(KAISTre_KMDP)_labels.json"
      },
      "embedding": ["glove-morph-kor", "pos-morph-kor"],
      "preprocessors": ["word-count"],
      "run": {
        "top-k": 5
      }
    }
  },
  "embedding": {
    "pos-morph-kor": {
      "file_directory": "victornlp_re/victornlp_utils/embedding/data/EmbeddingPoS_kor.json",
      "key": "pos_tag",
      "from_pretrained": 0,
      "embed_size": 50,
      "train": 1,
      "special_tokens": {
        "unk": "<unk>",
        "bos": "<bos>",
        "pad": "<pad>"
      }
    },
    "glove-morph-kor": {
      "file_directory": "victornlp_re/victornlp_utils/embedding/data/EmbeddingGloVe_kor.json",
      "key": "joined",
      "from_pretrained": 1,
      "train": 0,
      "special_tokens": {
        "unk": "<unk>",
        "bos": "<bos>",
        "pad": "<BLK>"
      }
    },
    "etri-korbert": {
      "file_directory": "victornlp_re/victornlp_utils/embedding/data/EmbeddingBERTMorph_kor",
      "word_phrase": 1,
      "train": 0,
      "special_tokens": {
        "unk": "<unk>",
        "bos": "<bos>"
      }
    }
  },
  "model": {
    "mtre-sentence": {
      "gru_hidden_size": 128,
      "gru_layers": 2,
      "dependency_arc_size": 128,
      "dependency_dropout": 0.2,
      "entity_type_size": 128,
      "gcn_hidden_size": 128,
      "gcn_layers": 3,
      "symmetric_adj_matrix": 1,
      "relation_type_size": 160
    },
    "pruned-dependency": {
      "prune": 2,
      "lstm_hidden_size": 256,
      "lstm_layers": 2,
      "gcn_hidden_size": 256,
      "gcn_layers": 3,
      "relation_type_size": 160
    }
  },
  "train": {
    "language": "korean",
    "model": "mtre-sentence",
    "loss_fn": "mtre-sentence",
    "run_fn": "mtre-sentence",
    "analysis_fn": "mtre",
    "epoch": 100,
    "batch_size": 64,
    "optimizer": "adam",
    "learning_rate": 0.003,
    "device": "cuda:0",
    "early_stopping": {
      "patience": 3,
      "eps": 0.0,
      "maximize": 0
    }
  }
}